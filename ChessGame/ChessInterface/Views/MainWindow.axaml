<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:ChessInterface.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="600"
        x:Class="ChessInterface.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/ChessAssets/icon.ico"
        Title="Chess Game"
        Width="600" SizeToContent="Height"
        WindowStartupLocation="CenterScreen"
        Background="Black"
        >

    <Viewbox>
        <Grid x:Name="MainGrid"
              Width="600" 
              Height="600">
                <Image Source="/Assets/ChessAssets/Board.png" />
                <UniformGrid x:Name="PieceGrid"
                             Rows="8"
                             Columns="8"
                             >
                </UniformGrid>
        </Grid>
    </Viewbox>

</Window>
